<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ua.lyohha.page.settings.SettingsPage"
      prefHeight="800.0" prefWidth="600.0"
      alignment="CENTER" styleClass="vbox-view">
    <Label fx:id="menuNameLabel" prefWidth="300" prefHeight="40" styleClass="main-label-view" alignment="CENTER"/>
    <Label fx:id="themeLabel" prefWidth="300" prefHeight="40" styleClass="label-view" alignment="CENTER">
        <VBox.margin>
            <Insets>
                <top>10</top>
            </Insets>
        </VBox.margin>
    </Label>
    <ComboBox fx:id="themeComboBox" prefWidth="300" prefHeight="40" onAction="#themeComboBoxSelectionChanged">
        <VBox.margin>
            <Insets>
                <top>10</top>
            </Insets>
        </VBox.margin>
    </ComboBox>

    <Label fx:id="languageLabel" prefWidth="300" prefHeight="40" styleClass="label-view" alignment="CENTER">
        <VBox.margin>
            <Insets>
                <top>10</top>
            </Insets>
        </VBox.margin>
    </Label>
    <ComboBox fx:id="languageComboBox" prefWidth="300" prefHeight="40" onAction="#languageComboBoxSelectionChanged">
        <VBox.margin>
            <Insets>
                <top>10</top>
            </Insets>
        </VBox.margin>
    </ComboBox>
    <Button fx:id="backButton" styleClass="button-view" prefWidth="300"
            onAction="#backButtonClick">
        <VBox.margin>
            <Insets>
                <top>10</top>
            </Insets>
        </VBox.margin>
    </Button>
</VBox>
