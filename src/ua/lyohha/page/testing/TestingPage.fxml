<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="ua.lyohha.page.testing.TestingPage"
          prefHeight="600.0" prefWidth="800.0">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
        <ColumnConstraints prefWidth="150" minWidth="150"/>
        <ColumnConstraints prefWidth="150" minWidth="150"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints vgrow="ALWAYS"/>
        <RowConstraints/>
    </rowConstraints>

    <HBox GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="3">
        <padding>
            <Insets>
                <left>10</left>
                <bottom>5</bottom>
                <top>5</top>
            </Insets>
        </padding>
        <Label fx:id="taskNameLabel" text="Некоторое название" styleClass="task-name-label"/>
    </HBox>

    <VBox GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.rowSpan="2" styleClass="task-vbox">
        <padding>
            <Insets>
                <left>10</left>
                <bottom>5</bottom>
                <top>5</top>
            </Insets>
        </padding>
        <HBox>
            <Label text="#include" styleClass="preprocessor-label-view"/>
            <Label text=" " styleClass="text-label-view"/>
            <Label text="&#60;stdio.h&#62;" styleClass="preprocessor-label-view"/>
        </HBox>
        <HBox>
            <Label text=" " styleClass="text-label-view"/>
        </HBox>
        <HBox>
            <Label text="void" styleClass="type-label-view"/>
            <Label text=" " styleClass="text-label-view"/>
            <Label text="main" styleClass="text-label-view"/>
            <Label text="(" styleClass="text-label-view"/>
            <Label text="char" styleClass="type-label-view"/>
            <Label text="*" styleClass="text-label-view"/>
            <Label text=" " styleClass="text-label-view"/>
            <Label text="args" styleClass="text-label-view"/>
            <Label text=")" styleClass="text-label-view"/>
        </HBox>
    </VBox>
    <VBox GridPane.columnIndex="1" GridPane.rowIndex="1" alignment="TOP_CENTER">
        <Label textAlignment="CENTER" text="Ответ" wrapText="true" styleClass="label-view"/>
        <TextField styleClass="text-field-view">
            <VBox.margin>
                <Insets>
                    <top>20</top>
                    <left>5</left>
                    <right>5</right>
                </Insets>
            </VBox.margin>
        </TextField>
        <TextField styleClass="text-field-view">
            <VBox.margin>
                <Insets>
                    <top>20</top>
                    <left>5</left>
                    <right>5</right>
                </Insets>
            </VBox.margin>
        </TextField>
    </VBox>
    <VBox GridPane.columnIndex="2" GridPane.rowIndex="1" alignment="TOP_CENTER">
        <Label textAlignment="CENTER" text="Результат" wrapText="true" styleClass="label-view"/>
        <Label text="ответ 1" prefWidth="140" styleClass="label-view" prefHeight="23">
            <VBox.margin>
                <Insets>
                    <top>20</top>
                    <left>5</left>
                    <right>5</right>
                </Insets>
            </VBox.margin>
        </Label>
        <Label text="ответ 2" prefWidth="140" styleClass="label-view" prefHeight="23">
            <VBox.margin>
                <Insets>
                    <top>20</top>
                    <left>5</left>
                    <right>5</right>
                </Insets>
            </VBox.margin>
        </Label>
    </VBox>

    <VBox GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="2" alignment="CENTER">
        <padding>
            <Insets>
                <top>10</top>
                <bottom>1</bottom>
            </Insets>
        </padding>
        <Button text="Проверить" styleClass="button-view" prefWidth="300"/>
        <Button text="Правильные ответы" styleClass="button-view" prefWidth="300"/>
        <Button text="В меню" styleClass="button-view" prefWidth="300"/>
        <Button text="Следующий" styleClass="button-view" prefWidth="300"/>
    </VBox>

</GridPane>
